<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zes.projectx.data.projectxmodulplaner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_Internal_STORAGE" />
    <uses-permission android:name="android.permission.READ_Internal_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".Activitys.AddSubject" />
        <activity
            android:name=".Activitys.PopUp"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".Activitys.LoginActivity"
            android:theme="@style/SplashScreenTheme" />
        <activity android:name=".Activitys.Central" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainNavLayer"
            android:label="@string/title_activity_main_nav_layer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activitys.MainDrawerLayout"></activity>
    </application>

</manifest>